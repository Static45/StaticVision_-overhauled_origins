{
	"name": "Too hot for me!",
	"description": "Wearing armor stronger than chainmail will cause you to burn inside hot biomes",
"type": "origins:multiple",

  "hot_biome_head": {
    "type": "origins:burn",
      "interval": 20,
      "onset_delay": 60,
      "burn_duration": 1,

    "condition": {
        "type": "origins:and",
        "conditions": [
          {
          "type": "origins:biome",
          "condition": {
            "type": "origins:temperature",
            "comparison": ">=",
            "compare_to": 2
          }
        },
        {
          "type": "origins:equipped_item",
                  "equipment_slot": "head",
                  "item_condition": {
                    "type": "origins:armor_value",
                    "comparison": ">",
                    "compare_to": 2
                  }
                }
              ]
            }
    },

